{# templates/index.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Inicio APP</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css" >
            <link rel="stylesheet" href="{{ asset('css/otros_estilos.css') }}" type="text/css"/>
		{% endblock %}
    </head>
    <body>
		<div class="row justify-content-center">                                                          
            <div class="container-fluid justify-content-center">
                <p id="logo" class="display-1 font-weight-bold text-center text-success">App_a_renombrar</p> 
            </div>     
        </div>

        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-outline-light btn-lg">
                <a href="{{ path('Pruebas') }}">
                    <img src="img/pruebas.png" width="120px" height="120px">
                </a>
            </button>
        </div>


		{% block javascripts %}
			<script src="{{ asset('js/jquery-3.5.1.min.js') }}" type="text/javascript"></script>
			<script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
